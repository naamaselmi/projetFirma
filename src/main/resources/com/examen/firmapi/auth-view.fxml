<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.examen.firmapi.controllers.AuthController"
            style="-fx-background-color: #FFF8E7;">

    <!-- Top Menu -->
    <top>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding:20; -fx-background-color:#DFF2C1;">
            <Button text="Login"
                    onAction="#showLogin"
                    style="-fx-background-color: #A8E6CF; -fx-text-fill: #2F4F4F; -fx-font-weight:bold; -fx-background-radius:10; -fx-padding:8 20;"/>
            <Button text="Sign Up"
                    onAction="#showSignUp"
                    style="-fx-background-color: #FFD3B6; -fx-text-fill: #2F4F4F; -fx-font-weight:bold; -fx-background-radius:10; -fx-padding:8 20;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding:40;"/>
    </center>

</BorderPane>