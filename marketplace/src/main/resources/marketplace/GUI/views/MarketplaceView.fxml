<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane fitToWidth="true" style="-fx-background-color: #fefbde; -fx-background: #fefbde;" 
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="marketplace.GUI.Controller.MarketplaceController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: #fefbde;">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="20.0" />
         </padding>
         <children>
            
            <!-- Title -->
            <Label text="Les Gestions" textFill="#49ad32">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            
            <!-- Management Cards - Using FlowPane for better centering and wrapping -->
            <FlowPane alignment="CENTER" hgap="30.0" vgap="30.0" prefWrapLength="1000.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <!-- Equipements Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgEquipements" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i4.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Équipements" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleEquipements" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>
         
               <!-- Terrains Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgTerrains" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i2.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Terrains" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleTerrains" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>
         
               <!-- Véhicules Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgVehicules" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i1.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Véhicules" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleVehicules" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>
         
               <!-- Fournisseurs Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgFournisseurs" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i3.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Fournisseurs" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleFournisseurs" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>

               <!-- Locations Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgLocations" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i5.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Locations" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleLocations" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>

               <!-- Commandes Card -->
               <VBox alignment="CENTER" spacing="12.0" prefWidth="200.0" prefHeight="220.0"
                     style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                  <ImageView fx:id="imgCommandes" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../image/i6.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;" text="Commandes" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleCommandes" prefWidth="140.0" prefHeight="35.0"
                          style="-fx-background-color: #49ad32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" 
                          text="Consulter" />
               </VBox>
            </FlowPane>
            
            <!-- Separator with margin -->
            <Separator style="-fx-padding: 0;">
               <VBox.margin>
                  <Insets top="20.0" bottom="10.0" />
               </VBox.margin>
            </Separator>
            
            <!-- ==================== STATISTICS SECTION ==================== -->
            
            <!-- Statistics Header -->
            <HBox alignment="CENTER" spacing="20.0">
               <Label text="Tableau de Bord - Statistiques" textFill="#49ad32">
                  <font>
                     <Font name="System Bold" size="32.0" />
                  </font>
               </Label>
            </HBox>
            
            <Label fx:id="lastUpdateLabel" style="-fx-text-fill: #888; -fx-font-size: 13px;" text="Dernière mise à jour: --" alignment="CENTER">
               <VBox.margin>
                  <Insets top="-15.0" />
               </VBox.margin>
            </Label>
            
            <!-- Summary Cards Row -->
            <HBox alignment="CENTER" spacing="25.0">
               <padding>
                  <Insets top="10.0" bottom="10.0" />
               </padding>
               <children>
                  <!-- Total Equipments -->
                  <VBox alignment="CENTER" spacing="8.0" prefWidth="170.0" prefHeight="100.0"
                        style="-fx-background-color: linear-gradient(to bottom right, #3498db, #2980b9); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(52,152,219,0.4), 12, 0, 0, 4);">
                     <Label fx:id="totalEquipLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                     <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Équipements" />
                  </VBox>
                  
                  <!-- Total Vehicles -->
                  <VBox alignment="CENTER" spacing="8.0" prefWidth="170.0" prefHeight="100.0"
                        style="-fx-background-color: linear-gradient(to bottom right, #e74c3c, #c0392b); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(231,76,60,0.4), 12, 0, 0, 4);">
                     <Label fx:id="totalVehicleLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                     <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Véhicules" />
                  </VBox>
                  
                  <!-- Total Terrains -->
                  <VBox alignment="CENTER" spacing="8.0" prefWidth="170.0" prefHeight="100.0"
                        style="-fx-background-color: linear-gradient(to bottom right, #27ae60, #1e8449); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(39,174,96,0.4), 12, 0, 0, 4);">
                     <Label fx:id="totalTerrainLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                     <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Terrains" />
                  </VBox>
                  
                  <!-- Total Orders -->
                  <VBox alignment="CENTER" spacing="8.0" prefWidth="170.0" prefHeight="100.0"
                        style="-fx-background-color: linear-gradient(to bottom right, #9b59b6, #8e44ad); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(155,89,182,0.4), 12, 0, 0, 4);">
                     <Label fx:id="totalOrdersLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                     <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Commandes" />
                  </VBox>
                  
                  <!-- Total Revenue -->
                  <VBox alignment="CENTER" spacing="8.0" prefWidth="200.0" prefHeight="100.0"
                        style="-fx-background-color: linear-gradient(to bottom right, #49ad32, #3d8f28); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(73,173,50,0.4), 12, 0, 0, 4);">
                     <Label fx:id="totalRevenueLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="0 DT" />
                     <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Chiffre d'affaires" />
                  </VBox>
               </children>
            </HBox>
            
            <!-- Charts Row 1 - Pie Charts -->
            <HBox alignment="CENTER" spacing="30.0">
               <padding>
                  <Insets top="20.0" />
               </padding>
               <children>
                  <!-- Stock Status Pie Chart -->
                  <VBox alignment="CENTER" spacing="15.0" prefWidth="380.0"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 12, 0, 0, 4);">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="État des Stocks" />
                     <PieChart fx:id="stockStatusChart" prefHeight="320.0" prefWidth="350.0" legendSide="BOTTOM" labelsVisible="true" />
                  </VBox>
                  
                  <!-- Orders by Status Pie Chart -->
                  <VBox alignment="CENTER" spacing="15.0" prefWidth="380.0"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 12, 0, 0, 4);">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Commandes par Statut" />
                     <PieChart fx:id="ordersStatusChart" prefHeight="320.0" prefWidth="350.0" legendSide="BOTTOM" labelsVisible="true" />
                  </VBox>
                  
                  <!-- Rentals by Type Pie Chart -->
                  <VBox alignment="CENTER" spacing="15.0" prefWidth="380.0"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 12, 0, 0, 4);">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Locations par Type" />
                     <PieChart fx:id="rentalTypeChart" prefHeight="320.0" prefWidth="350.0" legendSide="BOTTOM" labelsVisible="true" />
                  </VBox>
               </children>
            </HBox>
            
            <!-- Charts Row 2 - Line and Bar Charts -->
            <HBox alignment="CENTER" spacing="30.0">
               <padding>
                  <Insets top="20.0" bottom="20.0" />
               </padding>
               <children>
                  <!-- Monthly Revenue Line Chart -->
                  <VBox alignment="CENTER" spacing="15.0" prefWidth="580.0"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 12, 0, 0, 4);">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Évolution du Chiffre d'Affaires (6 mois)" />
                     <LineChart fx:id="revenueChart" prefHeight="350.0" prefWidth="540.0" createSymbols="true">
                        <xAxis>
                           <CategoryAxis fx:id="revenueXAxis" label="Mois" />
                        </xAxis>
                        <yAxis>
                           <NumberAxis fx:id="revenueYAxis" label="Montant (DT)" />
                        </yAxis>
                     </LineChart>
                  </VBox>
                  
                  <!-- Equipment by Category Bar Chart -->
                  <VBox alignment="CENTER" spacing="15.0" prefWidth="580.0"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 12, 0, 0, 4);">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Équipements par Catégorie" />
                     <BarChart fx:id="categoryChart" prefHeight="350.0" prefWidth="540.0">
                        <xAxis>
                           <CategoryAxis fx:id="categoryXAxis" label="Catégorie" />
                        </xAxis>
                        <yAxis>
                           <NumberAxis fx:id="categoryYAxis" label="Nombre" />
                        </yAxis>
                     </BarChart>
                  </VBox>
               </children>
            </HBox>
            
         </children>
      </VBox>
   </content>
</ScrollPane>
