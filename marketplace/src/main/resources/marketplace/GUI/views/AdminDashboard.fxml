<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="marketplace.GUI.Controller.AdminDashboardController">
   <left>
      <VBox prefHeight="720.0" prefWidth="203.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="155.0" prefWidth="250.0" spacing="15.0">
               <children>
                  <ImageView fx:id="logoImageView" fitHeight="135.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <Button fx:id="btnAccueil" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleAccueil" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Accueil">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
            <Button fx:id="btnEvenement" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleEvenement" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Évènement">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
            <Button fx:id="btnMarketplace" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleMarketplace" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Marketplace">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
            <Button fx:id="btnForum" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleForum" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Forum">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
            <Button fx:id="btnTechnicien" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleTechnicien" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Technicien">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
            <Button fx:id="btnUtilisateur" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleUtilisateur" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Utilisateur">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentArea" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #f5f7fa;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>
